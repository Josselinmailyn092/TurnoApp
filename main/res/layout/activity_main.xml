<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="416dp"
        android:layout_height="177dp"
        android:background="@drawable/boton_azul"
        android:backgroundTint="#0000FE"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="436dp"
            android:layout_height="177dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="480dp"
        android:layout_weight="1"
        android:background="#D1CBCB"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/turnoActualContainer"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:layout_editor_absoluteX="-12dp">

        <TextView
            android:id="@+id/bienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="BIENVENIDO"
            android:textColor="#324F97"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="GENERE SU TURNO "
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingreso_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Ingrese su número de cédula:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/cedula"
            android:layout_width="349dp"
            android:layout_height="44dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="#F8F4F4"
            android:gravity="center"
            android:hint="Número de cédula"
            android:inputType="number"
            android:maxLength="10" />

        <Button
            android:id="@+id/generar_turno"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@color/azul"
            android:gravity="center"
            android:onClick="generarTurno"
            android:text="GENERAR"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/numT"
            android:layout_width="196dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="58sp"
            android:layout_marginBottom="18sp"

            android:background="#F7F3F3"
            android:gravity="center"
            android:hint="@string/numT1"
            android:text=""
            android:textSize="30sp" />

        <!--
        boton para llevar a activity 2
        -->
        <Button
            android:id="@+id/btnAct2"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/verde"
            android:onClick="cambioMain"
            android:text="Confirmar Atención" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/turnoActualContainer"
        android:layout_width="389dp"
        android:layout_height="123dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="23dp">

        <TextView
            android:id="@+id/turno_actual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#344DB1"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:hint="Sin turnos"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linearLayoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/queueList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/queueList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/queueList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/queueList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
