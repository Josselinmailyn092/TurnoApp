<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="419dp"
        android:layout_height="181dp"
        android:background="@drawable/boton_azul"
        android:backgroundTint="#0000FE"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="148dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="421dp"
        android:layout_height="457dp"
        android:layout_weight="1"
        android:background="#D1CBCB"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/turnoActualContainer"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:layout_editor_absoluteX="-8dp">

        <TextView
            android:id="@+id/bienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="BIENVENIDO"
            android:textColor="#324F97"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="GENERE SU TURNO "
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingreso_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/josefin_sans_semibold"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Ingrese su número de cédula:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/cedula"
            android:layout_width="369dp"
            android:layout_height="46dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="#F8F4F4"
            android:gravity="center"
            android:hint="Número de cédula"
            android:inputType="number"
            android:maxLength="10" />

        <Button
            android:id="@+id/generar_turno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_azul"
            android:gravity="center"
            android:text="GENERAR"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/nuevoTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_rojo"
            android:gravity="center"
            android:text="NUEVO TURNO"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/mostrar_estado"
            android:layout_width="370dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/boton_verde"
            android:gravity="center"
            android:text="MOSTRAR ESTADO"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/turnoActualContainer"
        android:layout_width="415dp"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-4dp">

        <TextView
            android:id="@+id/turno_actual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#344DB1"
            android:fontFamily="@font/josefin_sans_semibold"
            android:gravity="center"
            android:text="A001"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/linearLayoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/queueList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
